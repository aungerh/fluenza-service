= bootstrap_devise_error_messages!
.row
  .col.s6.offset-s3
    .row.form-card{style: "background-color: rgba(128, 128, 128, 0.05)"}
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f|
        .input-field.col.s12
          = f.label :email
          = f.email_field :email, autofocus: true, class: 'form-control'
        .input-field.col.s12
          = f.label :password
          = f.password_field :password, autocomplete: 'off', class: 'form-control'
        .input-field.col.s12
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
        - if resource.class.to_s == 'Agency'
          .input-field.col.s12
            = f.label :agency_name
            = f.text_field :name
          .input-field.col.s12
            = f.label :manager_name
            = f.text_field :manager_name
        .input-field.col.s6.offset-s3
          = f.submit  t('.sign_up', default: 'Sign in'), class: 'btn'
        .input-field.col.s6.offset-s3
          = render 'devise/shared/links'
